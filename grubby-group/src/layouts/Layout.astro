---
import SkipLink from "../components/skiplink.astro";
import MainNav from "../components/MainNav.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Card from '../components/Card.astro';
import "../CSS/main-print.css";
import "../CSS/main-screen.css";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>

<header>
<SkipLink/>
	<Header title="Explorations of the contenteditable attribute"/>
<MainNav/>
</header>

<main id="main-content">

	
		<slot />
<!-- the above is where Astro "slots in" content from the relevant pages under the src/pages .astro files -->


		</main>
		<footer aria-label="main footer">
		<Footer/>
		</footer>
		
	</body>
</html>